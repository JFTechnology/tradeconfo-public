<resource type="people" xmlns="http://tradeconfo.com/ns/api">

	<description>Represents an individual</description>

	<attribute name="id" type="string" required="true" />
	<attribute name="name" type="string" required="true" />
	<attribute name="first-name" type="string" required="true" />
	<attribute name="title" type="string" required="false" />
	<attribute name="name" type="string" required="true">
		<comment>
			Family name
		</comment>
	</attribute>
	<attribute name="gender" type="enum" enum="gender" required="false" />
	<attribute name="review-status" type="enum" enum="review.status" required="false" />
	<attribute name="last-reviewed" type="timestamp" required="false" />
	<attribute name="object-status" type="enum" enum="object-status"
		required="false" />

	<relationship name="domain" resource="domains" required="false" />

	<url method="GET" url="people/:id">
		<example file="person.json" />
		<comment>
			Returns a single resource.
		</comment>
	</url>
	<url method="GET" url="people/self">
		<example file="person.json" />
		<comment>
			Bootstrap endpoint that returns the resource corresponding to the
			resource owner. Think 'whoami' ?
		</comment>
	</url>

</resource>